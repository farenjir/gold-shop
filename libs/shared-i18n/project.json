{
  "name": "@gold-shop/shared-i18n",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared-i18n/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared-i18n",
        "main": "libs/shared-i18n/src/index.ts",
        "tsConfig": "libs/shared-i18n/tsconfig.lib.json",
        "assets": ["libs/shared-i18n/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/shared-i18n/**/*.ts"]
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared-i18n",
        "main": "libs/shared-i18n/src/index.ts",
        "tsConfig": "libs/shared-i18n/tsconfig.lib.json",
        "assets": ["libs/shared-i18n/*.md"]
      }
    }
  },
  "tags": ["scope:shared", "type:i18n"]
}
