{
  "name": "@gold-shop/gold-admin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/gold-admin/src",
  "projectType": "application",
  "tags": ["scope:admin", "type:app"],
  "implicitDependencies": ["@gold-shop/shared-i18n"],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/gold-admin"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/gold-admin"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "gold-admin:build",
        "dev": true,
        "port": 3020
      },
      "configurations": {
        "development": {
          "buildTarget": "gold-admin:build:development",
          "dev": true,
          "port": 3020
        },
        "production": {
          "buildTarget": "gold-admin:build:production",
          "dev": false,
          "port": 3020
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next dev --port 3020 --turbopack",
        "cwd": "apps/gold-admin"
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "gold-admin:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/gold-admin/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/gold-admin/**/*.{ts,tsx,js,jsx}"]
      }
    }
  }
}
