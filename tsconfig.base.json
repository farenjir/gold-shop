{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@gold-shop/source"],
    "baseUrl": ".",
    "paths": {
      "@gold-shop/shared-data-access": ["libs/shared-data-access/src/index.ts"],
      "@gold-shop/shared-icons": ["libs/shared-icons/src/index.ts"],
      "@gold-shop/shared-provider": ["libs/shared-provider/src/index.ts"],
      "@gold-shop/shared-types": ["libs/shared-types/src/index.ts"],
      "@gold-shop/shared-ui": ["libs/shared-ui/src/index.ts"],
      "@gold-shop/shared-utils": ["libs/shared-utils/src/index.ts"]
    }
  }
}
